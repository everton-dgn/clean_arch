{
  "name": "boilerplate_reactjs",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/react_webpack_styled_components_redux_tlk_boilerplate",
  "main": "./src/index.js",
  "scripts": {
    "dev": "env-cmd -f .env webpack-dev-server --progress --config webpack/webpack.local.js",
    "start": "env-cmd -f .env.prod webpack-dev-server --open --config webpack/webpack.prod.js",
    "build": "env-cmd -f .env.prod webpack --config webpack/webpack.prod.js",
    "build:dev": "env-cmd -f .env.dev webpack --config webpack/webpack.dev.js",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx,json} --max-warnings=0",
    "lint:css": "stylelint src/**/styles.ts src/**/GlobalStyles.ts src/theme/*.ts",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50% --passWithNoTests",
    "test:w": "jest --watch --maxWorkers=25% --passWithNoTests",
    "test:coverage": "jest --maxWorkers=50% --passWithNoTests --coverage",
    "sb": "start-storybook -p 6006",
    "build-sb": "build-storybook",
    "generate": "yarn plop --plopfile componentGenerator/plopfile.js",
    "verify:update": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --findRelatedTests -b && yarn build && yarn build-sb"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint",
      "yarn lint:css",
      "yarn typecheck"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "axios": "^0.27.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@faker-js/faker": "^6.3.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@svgr/webpack": "^5.5.0",
    "@swc/core": "^1.2.174",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "babel-loader": "^8.2.1",
    "babel-plugin-styled-components": "^1.12.0",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-storybook": "^0.5.10",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^7.0.4",
    "image-webpack-loader": "^7.0.1",
    "jest": "^28.0.3",
    "jest-environment-jsdom": "^28.0.2",
    "jest-styled-components": "^7.0.8",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^12.4.1",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "react-refresh": "^0.13.0",
    "react-test-renderer": "^17.0.2",
    "serve": "^11.3.2",
    "source-map-loader": "^1.1.2",
    "storybook-dark-mode": "^1.0.9",
    "storybook-mobile": "^1.0.0",
    "stylelint": "^14.8.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "swc-loader": "^0.2.0",
    "typescript": "^4.6.4",
    "webpack": "^5.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2"
  }
}
